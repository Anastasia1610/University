<Window x:Class="University.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:University"
        mc:Ignorable="d"
        Title="University" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Height="20" Text="Groups" VerticalAlignment="Top" Margin="20"/>
        <ListBox Name="Groups" SelectionMode="Single" SelectionChanged="Groups_SelectionChanged" Height="200" VerticalAlignment="Top" Margin="20, 50"/>

       

        <StackPanel Height="300" Margin="20" Grid.Column="1">
            
        </StackPanel>

        <TextBlock Height="20" Text="Students" VerticalAlignment="Top" Margin="20" Grid.Column="2"/>
        <ListBox Name="Students" Height="200" VerticalAlignment="Top" Margin="20,50" Grid.Column="2"/>



    </Grid>
</Window>
